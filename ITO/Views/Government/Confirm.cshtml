@model ITO.ViewModels.AgencyUser.PartYearEventDetailsViewModel

    <form id="Confirm" asp-action="Confirm" asp-route-id="@Model.Id" method="post">
    </form>
    <form id="NotConfirm" asp-action="NotConfirm" asp-route-id="@Model.Id" method="post">    
    </form>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label class="control-label">Учреждение: @Model.Agency</label>
            </div>
            <div class="form-group">
                <label class="control-label">Год годового плана: @Model.DataYear</label>
            </div>
            <div class="form-group">
                <label class="control-label">Номер пункта годового плана: @Model.NumberYearEvent</label>
            </div>
            <div class="form-group">
                <label class="control-label">Текст мероприятия: @Model.EventText</label>
            </div>
            <div class="form-group">
                <label class="control-label">Сколько всего запланировано: @Model.FullDonePlan</label>
            </div>
            <div class="form-group">
                <label class="control-label">Выполнено за данный отчет: @Model.Done</label>
            </div>
            <div class="form-group">
                <label class="control-label">Затрачено бюджетных средств: @Model.PriceB</label>
            </div>
            <div class="form-group">
                <label class="control-label">Затрачено средств из иных источников: @Model.PriceNotB</label>
            </div>
            <div class="form-group">
                <label class="control-label">Затрачено средств: всего: @(Model.PriceB+Model.PriceNotB)</label>
            </div>
            <div class="form-group">
                <label class="control-label">Дата выполнения: @Model.DateTime</label>
            </div>
            <div class="form-group">
                <label class="control-label">Кто подтвердил: @Model.UserNameСonfirmed</label>
            </div>
            <div class="form-group">
                <label class="control-label">Кто отчитался: @Model.UserNameSent</label>
            </div>
            <div class="form-group">
                <input form="Confirm" type="submit" value="Принять" class="btn btn-success" />
            </div>
            <div class="form-group">
                <textarea form="NotConfirm" placeholder="введите комментарий" required type="text" asp-for="Сomment" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input form="NotConfirm" type="submit" value="Вернуть на доработку" class="btn btn-danger" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="upload-file-container-pdf  col-lg-10">
            <iframe src="@Model.Pdf" height="300" width="1115" id="pdf"></iframe>
        </div>
    </div>
    <div class="row">

        <div class="upload-file-container col-lg-12">
            <img src="@Model.Img" class="img-fluid img-thumbnail" id="image" alt="" />
        </div>
    </div>
</div>






