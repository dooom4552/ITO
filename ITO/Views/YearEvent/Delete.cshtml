@model ITO.ViewModels.DeleteYearEventViewModel
@{
    ViewBag.Title = "Удаление мероприятия годового плана";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.EventText)
        </dd>
    </dl>

    <div>
        @if (Model.partYearEvents.Count > 0)
        {
            <h4>
                Удалить не возможно <br />
                есть отчеты по данному мероприятию
            </h4>
        }
        else
        {
            <form asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Удалить" />
                </div>
            </form>
        }
    </div>
</div>

